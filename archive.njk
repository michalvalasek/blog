<div class="container w-full md:max-w-md mx-auto pt-20">
  <div class="w-full px-4 md:px-6 text-xl text-grey-darkest leading-normal">
    <div class="font-sans">
      <span class="text-base md:text-sm text-teal font-bold">&lt;<span> <a href="/" class="text-base md:text-sm text-teal font-bold no-underline hover:underline">BACK TO HOME</a></p>
    </div>
  </div>
</div>

<div class="container w-full md:max-w-md mx-auto">
  <div class="w-full px-4 md:px-6 text-xl text-grey-darkest leading-normal" style="font-family:Georgia,serif;">
    {% set posts = collections.posts | head(-10) | reverse %}
    {% for post in posts %}
      <div class="pb-6 font-sans">
        <h4 class="font-sans break-normal text-black pt-6 pb-2">
          <a class="text-teal" href="{{ post.url }}">{{ post.data.pageTitle }}</a>
        </h4>
        <p class="text-sm md:text-base font-normal text-grey-dark">{{ post.data.publishedDate }}</em>
      </div>
    {% endfor %}
  </div>
</div>
